<div class="block block-fill-height block-transparent block-inverse block-angle app-block-when">
  <div class="block-bg-clip">
    <div class="block-bg">
      <div class="block-bg-img block-bg-img-top" style="background-image: url(images/clock.jpeg)">
      </div>
    </div>
  </div>

  <div class="block-xs-middle">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-sm-offset-6">
          <h1 class="block-title m-b-md">
            <span class="text-ribbon">
              <span>Next dinner</span>
            </span>
          </h1>
          <p class="lead">
            <span class="text-ribbon">
              <span>
                <%= place && place.datetime? ? Time.at(place.datetime).strftime("%A %B, %e at %l:%M %P") : "TBD" %>
              </span>
            </span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
