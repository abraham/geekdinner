<div class="block block-fill-height block-transparent block-angle app-block-where">

    <div class="block-bg-clip">
      <div class="block-bg">
        <div class="block-bg-img block-bg-img-top" style="background-image: url(https://maps.googleapis.com/maps/api/staticmap?markers=<%= CGI.escape place.address %>&zoom=13&size=640x410&scale=2&key=AIzaSyBhJUQDPxSst7bFkzUxVg9SdEEwhpkvb1U)">
        </div>
      </div>
    </div>

    <div class="block-sm-middle block-xs-top">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <h1 class="block-title m-b-md">
              <span class="text-ribbon text-ribbon-primary">
                <span><%= place.name %></span>
              </span>
            </h1>
            <p class="lead">
              <span class="text-ribbon text-ribbon-primary">
                <span><%= place.address %>
                <a href="https://www.google.com/maps/place/<%= CGI.escape place.address %>/"></span><span class="icon icon-map"></span></a></span>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
